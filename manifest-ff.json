{
  "manifest_version": 3,
  "name": "FabriFetch",
  "version": "1.1",
  "description": "Download media from Threads posts",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://*.threads.net/*",
    "https://*.threads.com/*"
  ],

  "background": {
    "scripts": ["background-ff.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.threads.net/*",
        "https://www.threads.com/*" 
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "FabriFetch: Download Threads Media",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "fabri-fetch@rastrisr"
    }
  }
}