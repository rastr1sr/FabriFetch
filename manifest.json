{
  "manifest_version": 3,
  "name": "FabriFetch",
  "version": "1.0",
  "description": "Download media from Threads posts",
  "permissions": [
      "activeTab",
      "downloads"
  ],
  "background": {
      "service_worker": "background.js",
      "scripts": ["background.js"]
  },
  "content_scripts": [
      {
          "matches": [
              "https://www.threads.net/*"
          ],
          "js": [
              "content.js"
          ],
          "css": [
              "styles.css"
          ]
      }
  ],
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "action": {
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
      },
      "default_title": "FabriFetch",
      "default_popup": "popup.html"
  }
}